<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtvi"
    android:text="Create a Folder"
    android:textSize="22dp"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
   
    android:textColor="#404040"
    ></TextView>

    <EditText
        android:id="@+id/fnameedt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txtvi"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:paddingRight="10dp"
        android:paddingStart="12dp"
        android:textColor="#9C9C9C"
        android:maxLines="1"
        android:hint="Enter Folder Name"
        android:textSize="15dp">

    </EditText>

    <Button
        
        android:id="@+id/cancelfname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_below="@+id/fnameedt"
        android:background="#4C5BF3"
          android:layout_marginBottom="20dp"
         ></Button>

    <Button
        android:id="@+id/okfname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_below="@+id/fnameedt"
        android:background="#4C5BF3"
        android:layout_marginBottom="20dp"
         ></Button>


    

</RelativeLayout>