<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C5BF3"
    >

    <TextView

        android:id="@+id/pc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="First set passcode to go ahead"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        ></TextView>

    <ImageView
        
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/pc1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
         android:textColor="#FFFFFF"
        android:background="@drawable/iconslock2"></ImageView>

    <TextView

        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Your Passcode will be used Every time When u enter the app and its design to keep treepasser out"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp"></TextView>

    <EditText
        android:id="@+id/pedt1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/t2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:inputType="number"
        android:maxLength="4"
        android:hint="Enter Password"
       android:textColorHint="#515A5A"
        android:textAlignment="center"
        android:background="#FFFFFF"
        android:textSize="15dp"
        tools:ignore="HardcodedText" ></EditText>

      <EditText
        android:id="@+id/pedt2"
       android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/pedt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
         android:inputType="number"
        android:maxLength="4"
        android:hint="Confirm Passdode"
        android:textColorHint="#515A5A"
        android:textAlignment="center"
        android:background="#FFFFFF"
        android:textSize="15dp"
        tools:ignore="HardcodedText"
        
        ></EditText>

       <Button
        
        android:id="@+id/psetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Confirm"
        android:textColor="#BDBDBD"
        android:textAlignment="center"
        android:layout_below="@+id/pedt2"
        android:layout_marginTop="20dp"
        android:background="#9C640C"
         ></Button>

</RelativeLayout>
