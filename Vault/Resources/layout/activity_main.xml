<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C5BF3"
    >

    <TextView
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="Enter Password"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:layout_marginTop="@dimen/design_fab_size_mini"
        android:layout_centerHorizontal="true"
        >

        </TextView>

    <EditText
        android:id="@+id/edt1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="numberPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="_ _ _ _"
       
        android:maxLength="4"
        android:textColorHint="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:ignore="HardcodedText" ></EditText>
    
      
    <Button
        
        android:id="@+id/confrm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Confirm"
        android:textColor="#BDBDBD"
        android:textAlignment="center"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="20dp"
        android:background="#9C640C"
         ></Button>
    



</RelativeLayout>